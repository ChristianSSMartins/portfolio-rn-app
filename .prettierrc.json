{
  "printWidth": 100,             
  "tabWidth": 2,                
  "useTabs": false,              
  "semi": true,                
  "singleQuote": true,            
  "quoteProps": "as-needed",      
  "jsxSingleQuote": false,        
  "trailingComma": "all",         
  "bracketSpacing": true,         
  "jsxBracketSameLine": false,    
  "arrowParens": "avoid",        
  "endOfLine": "lf",              
  "overrides": [
    {
      "files": "*.json",          
      "options": {
        "printWidth": 120,        
        "tabWidth": 2             
      }
    },
    {
      "files": "*.tsx",           
      "options": {
        "singleQuote": false,
        "jsxBracketSameLine": true
      }
    }
  ]
}